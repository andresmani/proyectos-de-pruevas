<%- model_class = Pais -%>
<div class="page-header">
  <center><h1>Paises</h1></center>
  <%= form_tag  request.path, :method => 'get' do %>
   Pais a Buscar:
   <div class="input-append">
     <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "pais"} %>
     <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
   </div>
   <p>Numero de Registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
  <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @paises %>
  </tbody>
   <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Pais', new_pais_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br>
<br>
<div align="center">
<%= will_paginate @paises, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>

<td>Total Paises :<input type="text"  id="totalregs" class="span1" value="<%= @paises.total_entries %>" readonly />
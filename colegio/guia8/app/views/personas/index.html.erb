  <%- model_class = Persona -%>
<div class="page-header">
  <center><h1>Personas</h1></center>
  <%= form_tag  request.path, :method => 'get' do %>
   Personas a Buscar:
   <div class="input-append">
     <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "persona"} %>
     <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
   </div>
   <p>Numero de Registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
  <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>identificacion</th>
      <th>email</th>
      <th>fch_ncto</th>
      <th>telefono</th>
      <th>municipio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @personas %>
  </tbody>
   <tfoot>
    <tr>
      <td><%= link_to 'Nueva Persona', new_persona_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br>
<br>
<div align="center">
<%= will_paginate @personas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>

<td>Total Personas :<input type="text"  id="totalregs" class="span1" value="<%= @personas.total_entries %>" readonly />
<%- model_class = Municipio -%>
<div class="page-header">
  <center><h1>Municipios</h1></center>
  <%= form_tag  request.path, :method => 'get' do %>
   Municipio a Buscar:
   <div class="input-append">
     <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "Municipio"} %>
     <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
   </div>
   <p>Numero de Registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
  <% end %>

</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>departamento</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @municipios %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Municipio', new_municipio_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br>
<br>
<div align="center">
<%= will_paginate @municipios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>

<td>Total Municipios :<input type="text"  id="totalregs" class="span1" value="<%= @municipios.total_entries %>" readonly />
  <%- model_class = Departamento -%>
<div class="page-header">
  <center><h1>Departamentos</h1></center>
  <%= form_tag  request.path, :method => 'get' do %>
   Departamento a Buscar:
   <div class="input-append">
     <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "Departamento"} %>
     <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
   </div>
   <p>numero de registros:
  <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
  <% end %>
</div>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>pais</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @departamentos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Departamento', new_departamento_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>
<br>
<br>
<div align="center">
<%= will_paginate @departamentos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>

<td>Total Deparatmentos :<input type="text"  id="totalregs" class="span1" value="<%= @departamentos.total_entries %>" readonly />
<%- model_class = Persona -%>
<div class="page-header">
  <center><h1>Personas</h1></center>
  <%= form_tag request.path, :method => 'get' do %>
Nombre Persona:
<div class="input-append">
      <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "Persona"} %>
      <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
    </div>
    <p>numero de registros:
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
<% end %>

<br />
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>identificacion</th>
      <th>email</th>
      <th>fch_ncto</th>
      <th>telefono</th> 
      <th>municipio</th>
      <th>acciones</th>

    </tr>
  </thead>
  <tbody>
     <%= render @personas %>
  </tbody>
</table>
<td><%= link_to 'Nuevo persona', new_persona_path, :remote => true, :class=>"btn btn-inverse" %></td>
<div class="pagination pagination-centered">
  <ul>
    <%= will_paginate @personas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
<p >
Total personas :<input type="text"  id="totalregs" class="span1" value="<%= @personas.total_entries %>" readonly />
</p>
</div>
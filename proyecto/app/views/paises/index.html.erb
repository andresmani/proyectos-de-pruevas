<%- model_class = Pais -%>
  <center><h1>Paises</h1></center>
<%= form_tag request.path, :method => 'get' do %>
Nombre pais:
<div class="input-append">
      <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "pais"} %>
      <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
    </div>
    <p>numero de registros:
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
<% end %>

<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @paises %>
  </tbody>
</table>
<td><%= link_to 'Nuevo pais', new_pais_path, :remote => true, :class=>"btn btn-inverse" %></td>
<br />
<br />
<div class="pagination pagination-centered">
  <ul>
    <%= will_paginate @paises, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
<p>
Total Paises : <%= @paises.total_entries %>
</p>
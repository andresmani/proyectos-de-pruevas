<%- model_class = Departamento -%>
<div class="page-header">
  <br>
  <br>
  <center><h1>Departamentos</h1></center>
<%= form_tag request.path, :method => 'get' do %>
    Departamento a Buscar:
    <div class="input-append">
      <%= search_field_tag :search, params[:search],  options={:class=>"span2", :placeholder => "Departamento"} %>
      <%= submit_tag "Consultar",options={ :class => "btn btn-inverse", :name => nil} %>
    </div>
    <p>numero de registros:
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
   <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Departamento</th>
      <th>pais</th>
      <th>acciones</th>
    </tr>
  </thead>
  <tbody>
     <%= render @departamentos %>
  </tbody>
</table>
<td><%= link_to 'Nuevo Departamento', new_departamento_path, :remote => true, :class=>"btn btn-inverse" %>
</td>
<div class="pagination pagination-centered">
  <ul>
    <%= will_paginate @departamentos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
</div>
<p >
Total Departamentos : <%=@departamentos.total_entries %>
</p>
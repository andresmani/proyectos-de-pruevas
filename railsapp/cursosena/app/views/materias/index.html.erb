<%- model_class = Materia -%>
<div class="page-header">
  <h1>Materias</h1>
</div>

<%= form_tag request.path, :method => 'get' do %>

  Nombre Materia
  <P><%= text_field_tag :search, params[:search] %></p>

  Numero de registros
  <P><%= text_field_tag :registros, params[:registros]%></p>
    
  <P><%= submit_tag "Consultar", :nombre_materia => nil, :class => 'btn btn-small btn-success' %></p>
<% end %>   

<br/>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "nombre_materia" %></th>
      <th><%= sortable "asignatura_id" %></th>
    </tr>
  </thead>
  <tbody>
      <%= render @materias %>
  </tbody>
</table>

<tfoot>
  <tr>
    <td><%= link_to 'Nueva Materia', new_materia_path, :remote => true, :class => 'btn btn-samll btn-info' %></td>
  </tr>
</tfoot>

<br/>
<br/>

<div align="center">
  <%= will_paginate @materias, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
</div>

<p>
  Total Materias: <%= @materias.total_entries %>
</p>



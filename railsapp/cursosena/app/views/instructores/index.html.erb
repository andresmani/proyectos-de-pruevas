<%- model_class = Instructor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= form_tag request.path, :method => 'get' do %>

    <p>Nombre Instructor:</p>
    <p><%= text_field_tag :search, params[:search] %></p>

    <p>Numero de registros
    <p><%= text_field_tag :registros, params[:registros] %></p>

    <p><%= submit_tag "Consultar", :nombre => nil, :class => 'btn btn-small btn-success' %></p>
 
<% end %>    

<br/>

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "nombre" %></th>
      <th><%= sortable "apellido" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "telefono" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "materia_id","Materia" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @instructores %>
  </tbody>
</table>

<tfoot>
  <tr>
    <td><%= link_to 'Nuevo Instructor', new_instructor_path, :remote => true, :class => 'btn btn-small btn-info' %></td>
  </tr>
</tfoot> 

<br/>
<br/>

<div align="center">
  <%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
</div>

<p>
  Total Instructores: <%= @instructores.total_entries %>
</p>


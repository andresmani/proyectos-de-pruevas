<%- model_class = Estudiante -%>
<div class="page-header">
  <h1>Estudiantes del Curso:<%= @asignatura.nombre_asignatura %></h1>
</div>

<%= form_tag request.path, :method => 'get' do %>
    <p>Nombre Estudiante:</p>
    <p><%= text_field_tag :search, params[:search] %></p>
    
    <p>Numero de registros</p>
    <p><%= text_field_tag :registros, params[:registros] %></p>

    <p><%= submit_tag "Consultar", :nombre => nil, :class => 'btn btn-small btn-info' %></p>

<% end %>

<br/>

<table class="table table-striped table-bordered table-condensed pretty ">
  <thead>
    <tr>
      <th><%= sortable "nombre" %></th>
      <th><%= sortable "apellido" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "telefono" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "asignatura_id", "Curso" %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  </tbody>
      <%= render @estudiantes %>
  </tbody>
</table>

<tfoot>
  <td><%= link_to 'Nuevo estudiante', new_asignatura_estudiante_path,:remote => true, :class => 'btn btn-small btn btn-success' %></td>
  <td><%= link_to "Atras", asignaturas_path, :class => 'btn btn-small btn btn-info' %></td>
</tfoot>

<br/>
<br/>

<div align="center">
  <%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label  => 'siguiente&raquo;' %>
</div>

<p>
  Total Aprendices : <%= @estudiantes.total_entries%>
</p>




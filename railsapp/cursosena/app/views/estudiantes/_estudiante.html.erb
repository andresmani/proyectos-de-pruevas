<tr id=<%= "estudiante_#{estudiante.id}" %>>
	
	<td><%= estudiante.nombre %></td>
	<td><%= estudiante.apellido %></td>
	<td><%= estudiante.cedula %></td>
	<td><%= estudiante.telefono %></td>	
	<td><%= estudiante.direccion %></td>
	<td><%= estudiante.asignatura.nombre_asignatura%></td>

	<td>
		<%= link_to 'Mostrar', asignatura_estudiante_path(@asignatura,estudiante), :remote => true, :class => 'btn btn-mini' %>
        <%= link_to 'Editar', edit_asignatura_estudiante_path(@asignatura,estudiante), :remote => true, :class => 'btn btn-mini' %>
        <%= link_to 'Eliminar', asignatura_estudiante_path(@asignatura,estudiante),  :data => { :confirm => 'Esta Seguro?' }, :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
	</td>
</tr>	
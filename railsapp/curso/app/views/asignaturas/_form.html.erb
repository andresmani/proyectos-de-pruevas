<%= simple_form_for @asignatura, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre_asignatura %>
  <%= f.input :ficha %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asignaturas_path, :class => 'btn' %>
  </div>
<% end %>

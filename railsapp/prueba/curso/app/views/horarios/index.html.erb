<%- model_class = Horario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:dia) %></th>
      <th><%= model_class.human_attribute_name(:hora) %></th>
      <th><%= model_class.human_attribute_name(:aula) %></th>
      <th><%= model_class.human_attribute_name(:materia_id) %></th>
      <th><%= model_class.human_attribute_name(:instructor_id) %></th>
      <th><%= model_class.human_attribute_name(:curso_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @horarios.each do |horario| %>
      <tr>
        <td><%= link_to horario.id, horario_path(horario) %></td>
        <td><%= horario.dia %></td>
        <td><%= horario.hora %></td>
        <td><%= horario.aula %></td>
        <td><%= horario.materia_id %></td>
        <td><%= horario.instructor_id %></td>
        <td><%= horario.curso_id %></td>
        <td><%=l horario.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_horario_path(horario), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      horario_path(horario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_horario_path,
            :class => 'btn btn-primary' %>
